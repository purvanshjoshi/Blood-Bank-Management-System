# Blood Bank Management System - Environment Configuration Template
# Copy this file to .env and fill in your actual values
# NEVER commit the actual .env file with sensitive information

# Server Configuration
APP_ENV=development
APP_DEBUG=true
APP_PORT=8000
APP_HOST=localhost

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=blood_bank
DB_USER=root
DB_PASSWORD=
DB_CHARSET=utf8mb4

# API Configuration
API_BASE_URL=http://localhost:8000
API_PREFIX=/api/v1
API_TIMEOUT=30

# Authentication Settings
AUTH_SECRET_KEY=your_secret_key_here_change_this
AUTH_TOKEN_EXPIRY=3600
AUTH_SESSION_TIMEOUT=1800

# Session Configuration
SESSION_DRIVER=file
SESSION_LIFETIME=120

# Logging Configuration
LOG_LEVEL=info
LOG_PATH=./logs

# File Upload Settings
UPLOAD_MAX_SIZE=5242880
UPLOAD_PATH=./uploads
ALLOWED_EXTENSIONS=pdf,jpg,jpeg,png,doc,docx

# Email Configuration (Optional)
MAIL_DRIVER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password
MAIL_FROM_ADDRESS=noreply@bloodbank.local
MAIL_FROM_NAME=Blood Bank System

# Security Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000
CORE_ENABLED=true

# Frontend Configuration
FRONTEND_URL=http://localhost:3000
FRONTEND_TIMEOUT=10000

# Database Backup Configuration
BACKUP_ENABLED=true
BACKUP_PATH=./backups
BACKUP_SCHEDULE=0 2 * * *

# Cache Configuration
CACHE_DRIVER=file
CACHE_TTL=3600
